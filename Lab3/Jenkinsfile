pipeline {
    options { timestamps() }

    agent none
    stages {
        stage('Check scm') {
            agent any
            steps {
                checkout scm
            }
        }
        stage('Build'){
            steps {
                echo "Building ...${BUILD_NUMBER}"
                echo "Build completed"
            }
        }
        stage('Test') {
            agent { docker { image 'alpine'
                    args '-u=\"root\"'
                    }
                  }
            steps {
                sh 'apk add --update python3 py-pip'
                sh 'pip install Flask'
                sh 'pip install xmlrunner'
                sh 'python3 Lab3/test.py'
            } 
            post {
                always {
                    junit 'test-reports/*.xml'
                }   
                success {
                    echo "Application testing successfully completed "
                }
                failure {
                    echo "Ooooppss!!! Tests failed!"
                }
            }     
        }
        stage ('Docker') {
             steps {
                script {
                    def dockerImage = docker.build("haktoid/lab3-jenkins-final:${BUILD_NUMBER}")
                    dockerImage.push()
                    sh 'docker rmi -f haktoid/lab3-jenkins-final:${BUILD_NUMBER}'
                }
            }
        }
    }
}